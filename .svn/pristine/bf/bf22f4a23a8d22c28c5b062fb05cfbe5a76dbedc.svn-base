	@Override
	public TravelInfoVo FindByType(String app_abb, String type) {
		// TODO Auto-generated method stub
		String sql="SELECT travel_address,travel_start,travel_end,travel_target,travel_result,travel_date,travel_remark,reim_type,status1_opinion\r\n" + 
				"FROM travel,reimtypetab,STATUS\r\n" + 
				"WHERE status.`app_abb`=travel.app_abb=? AND reimtypetab.`reim_id`=travel.`reim_id` AND reim_type=?";
		QueryRunner runner=new QueryRunner();
		TravelInfoVo travel=null;
		try {
			travel=runner.query(DBUtil.getConnection(), sql, new BeanHandler<TravelInfoVo>(TravelInfoVo.class),app_abb,type);
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return travel;
	}

